        btnClose.classList.remove("hidden");
    });
    window.addEventListener('load', function () {
        // Этот код выполнится, когда вся страница полностью загружена
        if ('@ViewBag.IsFilterClose' === 'False') {
            filtersContaner.classList.remove("hidden");
            btnClose.classList.remove("hidden");
